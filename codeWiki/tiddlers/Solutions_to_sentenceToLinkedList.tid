function toLinkedList(sentence){
    var wordArray = sentence.split(' ');
    var output = new LinkedList(new Node(wordArray.shift()));
    var node = output.head;

    wordArray.forEach(function(word){
        word = new Node(word);
        node.next = word;
        node = word;
    })
    return output;
