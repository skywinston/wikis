function sentenceToLinkedList(sentence){
	var split = sentence.split(' ');
	function go(split, index){
		return split[index] ? new Node(split[index], go(split, index+1)) : null ;
	}
	return new LinkedList(new Node(split[0], go(split, 1)));
}
